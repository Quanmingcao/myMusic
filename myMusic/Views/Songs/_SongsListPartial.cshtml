
@model List<myMusic.Models.Songs>
@if (!Model.Any())
{
    <p>Không có bài hát nào.</p>
}
else
{
    <ul class="list-group">
        @foreach (var song in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <img src="@Url.Content("~/images/" + song.CoverImage)" alt="Ảnh bìa"
                         onerror="this.onerror=null;this.src='@Url.Content("~/images/ImagesSong/plhld.jpg")';"
                         style="width: 80px; height: 80px; object-fit: cover; margin-right: 15px;" />

                    <div>
                        <h5 class="mb-1">@song.Title</h5>
                        <small>
                            👤 @(song.Accounts?.Username ?? "Không rõ") |
                            🎼 @(song.Genres?.GenreName ?? "Không rõ") |
                            👁️ @song.Views lượt xem
                        </small>
                    </div>
                </div>

                <a href="@Url.Action("Details", "Songs", new { id = song.SongID })" class="btn btn-sm btn-outline-primary">Chi tiết</a>
            </li>
        }
    </ul>
}
