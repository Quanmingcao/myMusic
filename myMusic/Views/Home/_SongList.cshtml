@model List<myMusic.Models.Songs>

<div class="list-group">
    @foreach (var song in Model)
    {
        <div class="list-group-item mb-3 d-flex align-items-center">
            <img src="@Url.Content("~/images/" + (song.CoverImage ?? "default-cover.jpg"))"
                 alt="Ảnh bìa" style="width: 100px; height: 100px; object-fit: cover; margin-right: 15px;" />

            <div class="flex-grow-1">
                <h5>@song.Title</h5>
                <p>Người đăng: @(song.Accounts?.Username ?? "Không rõ")</p>
                <p>Ngày đăng: @song.UploadDate?.ToString("dd/MM/yyyy")</p>

                <audio controls style="width: 100%;">
                    <source src="@Url.Content("~/audio/" + song.FilePath)" type="audio/mpeg" />
                    Trình duyệt của bạn không hỗ trợ thẻ audio.
                </audio>
            </div>

            <div style="margin-left: 15px;">
                <a href="@Url.Action("Details", "Songs", new { id = song.SongID })" class="btn btn-primary">
                    Xem chi tiết
                </a>
            </div>
        </div>
    }
</div>

